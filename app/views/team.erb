<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title></title>
</head>
  <body>
    <div class="team">
      <h1><%= @team.name %></h1><br>
      <h2>Team Motto: <%= @team.motto %></h2><br>
    </div><br>

    <div class="hero">
      <% @heroes.each do |hero| %>
      <h2>Hero Name: <%= hero.name %></h2><br>
      <p>Hero Power: <%= hero.power %></p><br>
      <p>Hero Biography: <%= hero.bio %></p>
  </div><br>
  </body>
</html>
